<script>
  (function () {
    const form = document.getElementById("contactForm");
    const statusEl = document.getElementById("contactStatus");
    const submitBtn = document.getElementById("contactSubmit");

    function showStatus(msg) {
      statusEl.textContent = msg;
      statusEl.style.display = "block";
    }

    form.addEventListener("submit", async function (ev) {
      ev.preventDefault();

      // Let the browser report missing required fields nicely.
      // (We used novalidate to control the flow; reportValidity() still uses native UI.)
      if (!form.reportValidity()) return;

      // Disable button to prevent double submits
      submitBtn.disabled = true;
      submitBtn.setAttribute("aria-busy", "true");

      try {
        const formData = new FormData(form);

        const res = await fetch(form.action, {
          method: "POST",
          body: new URLSearchParams(formData),
          // Apps Script is cross-origin; this tells fetch to follow normal CORS rules.
          mode: "cors",
        });

        // If the browser can't read the response for any reason, res.ok may still be false.
        // We'll try to parse JSON, but fall back gracefully.
        let data = null;
        try {
          data = await res.json();
        } catch (e) {
          // ignore parse errors
        }

        if (res.ok && data && data.ok === true) {
          // Success → go to thanks page
          window.location.href = "/thanks/";
          return;
        }

        // Known validation failure from backend
        if (data && data.ok === false && data.error) {
          showStatus(data.error);
        } else {
          showStatus("Sorry—something went wrong sending your message. Please try again.");
        }
      } catch (err) {
        showStatus("Sorry—something went wrong sending your message. Please try again.");
      } finally {
        submitBtn.disabled = false;
        submitBtn.removeAttribute("aria-busy");
      }
    });
  })();
</script>

